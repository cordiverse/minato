{
  "name": "root",
  "private": true,
  "version": "1.0.0",
  "main": "index.js",
  "workspaces": [
    "packages/*",
    "external/*"
  ],
  "license": "MIT",
  "scripts": {
    "build": "yakumo build",
    "bump": "yakumo bump",
    "dep": "yakumo dep",
    "pub": "yakumo pub",
    "docs": "yarn workspace docs",
    "test": "node -r esbuild-register build/test",
    "test:text": "rimraf coverage && c8 -r text yarn test",
    "test:json": "rimraf coverage && c8 -r json yarn test",
    "test:html": "rimraf coverage && c8 -r html yarn test"
  },
  "devDependencies": {
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.25",
    "c8": "^7.11.0",
    "esbuild": "^0.14.31",
    "esbuild-register": "^3.3.2",
    "mocha": "^9.2.2",
    "rimraf": "^3.0.2",
    "typescript": "^4.6.3",
    "yakumo": "^0.1.0"
  }
}